


<div class="row">
  <div class="col-sm-6">
    <h1>Chapters</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_chapter_path, class: 'btn btn-primary' do %>
    Add New Chapter
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Parent</th>
            <th>Designator</th>
            <th>Number</th>
            
      </tr>
    </thead>

    <tbody>
      <% @chapters.each do |chapter| %>
        <%= content_tag :tr, id: dom_id(chapter), class: dom_class(chapter) do %>
          
            <td><%= link_to chapter.name, chapter %></td>
          

                      <td><%= chapter.parent %></td>
                      <td><%= chapter.designator %></td>
                      <td><%= chapter.number %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
