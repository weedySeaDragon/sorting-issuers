<div class="page-header">
  <%= link_to lodges_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    All Lodges
  <% end %>
  <%= link_to edit_lodge_path(@lodge), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show lodge</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @lodge.name %></dd>

  <dt>Nickname:</dt>
  <dd><%= @lodge.nickname %></dd>

  <dt>Designator:</dt>
  <dd><%= @lodge.designator %></dd>

  <dt>Number:</dt>
  <dd><%= @lodge.number %></dd>

</dl>
