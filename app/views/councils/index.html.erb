


<div class="row">
  <div class="col-sm-6">
    <h1>Councils</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_council_path, class: 'btn btn-primary' do %>
    Add New Council
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Designator</th>
            <th>Number</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @councils.each do |council| %>
        <%= content_tag :tr, id: dom_id(council), class: dom_class(council) do %>
          

                      <td><%= council.designator %></td>
                      <td><%= council.number %></td>
          
          
            <td><%= link_to 'Show', council %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
