<%= form_with(model: council, local: true) do |form| %>
  <% if council.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(council.errors.count, "error") %> prohibited this council from being saved:</h2>

      <ul>
      <% council.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :designator %>
    <%= form.text_field :designator, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :number %>
    <%= form.number_field :number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if council.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', council, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if council.persisted? %>
      <%= link_to "Cancel", council, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", councils_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
