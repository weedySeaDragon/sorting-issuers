<div class="page-header">
  <%= link_to councils_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    All Councils
  <% end %>
  <%= link_to edit_council_path(@council), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show council</h1>
</div>

<dl class="dl-horizontal">
  <dt>Designator:</dt>
  <dd><%= @council.designator %></dd>

  <dt>Number:</dt>
  <dd><%= @council.number %></dd>

</dl>
